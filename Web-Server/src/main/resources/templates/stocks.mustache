{{>layout/header}}
<div id="inputStock" class="container">
    <form method="get" action="/api/v1/search/client">
        <div class="form-group">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="발주처 검색" aria-label="발주처 검색"
                       aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Button</button>
                </div>
            </div>
        </div>
    </form>

    <form action="/api/v1/addProduct" method="post">
        {{#clientList}}

        {{/clientList}}
        </br>
        <table class="table table-hover table-dark">
            <thead>
            <tr>
                <th scope="col" width="400">상품명</th>
                <th scope="col">색상</th>
                <th scope="col">사이즈</th>
                <th scope="col">수량</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody id="inputForm">
            <tr>
                <td class="form-group">
                    <input type="text" name="productName" class="form-control" placeholder="productName">
                </td>
                <td class="form-group">
                    <input type="text" name="color" class="form-control" placeholder="ex) 빨강,파랑,노랑">
                </td>
                <td class="form-group">
                    <input type="text" name="size" class="form-control" placeholder="미입력: FREE">
                </td>
                <td class="form-group">
                    <input type="text" name="amount" class="form-control" placeholder="ex) 12,33,44">
                </td>
                <td class="form-group">
                    <button type="submit" class="btn btn-secondary">신규저장</button>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
</div>
</br>


<div class="container">
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">발주처</th>
            <th scope="col" width="400">상품명</th>
            <th scope="col">색상</th>
            <th scope="col">사이즈</th>
            <th scope="col">수량</th>
            <th scope="col">추가</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {{#stocks}}
            <tr>
                <td>{{client}}</td>
                <td>{{productName}}</td>
                <td>{{color}}</td>
                <td>{{size}}</td>
                <td>{{amount}}</td>
                <form action="/api/v1/addAmount" method="post">
                    <td>
                        <div class="form-group">
                            <input type="text" name="inputAmount" class="form-control">
                            <input type="text" name="id" class="form-control" value="{{id}}" style="display:none">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <button type="submit" class="btn btn-secondary">수량 추가</button>
                        </div>
                    </td>
                </form>
            </tr>
        {{/stocks}}
        </tbody>
    </table>
</div>
</br>
{{>layout/footer}}