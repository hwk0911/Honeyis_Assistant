{{>layout/header}}

<div id="signup">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="col-md-12">
                    <form>
                        <h3 class="text-center text-info">Sign-Up</h3>
                        <div class="form-group">
                            <label for="userId" class="text-info">ID@EMAIL.COM</label>
                            <input type="email" class="form-control" id="userId" placeholder="ID@EMAIL.COM">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">PASSWORD</label>
                            <input type="password" class="form-control" id="password" placeholder="PASSWORD">
                        </div>
                        <div class="form-group">
                            <label for="name" class="text-info">COMPANY</label>
                            <input type="text" class="form-control" id="company" placeholder="COMPANY">
                        </div>
                    </form>
                    <button type = "button" class = "btn btn-primary" id = "btn-signup"> 가입 완료 </button>
                    <a href = "/" role = "button" class = "btn btn-secondary"> 취소 </a>
                </div>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}