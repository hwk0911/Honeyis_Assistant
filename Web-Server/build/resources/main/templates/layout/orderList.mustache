<div class="container">
    <form action="/api/v1/sort" method="get">
        <div align="right" class="form-group">
            <button type="submit" class="btn btn-secondary">발주처 목록으로 정렬</button>
            <button type="button" class="btn btn-secondary" id="btn-copy">내용 복사</button>
        </div>
        <table class="table table-borderless table-dark" id="listBody">
            {{#orderList}}
                <div class="form-group">
                    <thead>
                    <tr>
                        <th scope="col">{{productName}}<input type="text" class="form-control" value="{{productName}}" name = "productName" style="display:none;"></th>
                        <th scope="col"><input type="text" name="client" value="{{client}}" class="form-control"></th>
                        <th scope="col"><input type="text" class="form-control" value="{{orderList}}" name = "option" style="display:none;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#optionEntry}}
                        <tr>
                            <td>{{key}}</td>
                            <td>{{value}}</td>
                            <td></td>
                        </tr>
                    {{/optionEntry}}
                    <tr>
                        <th><input type="text" value="." style="display:none" class="form-control" name="name"></th>
                    </tr>
                    </tbody>
                </div>
            {{/orderList}}
        </table>
    </form>
</div>