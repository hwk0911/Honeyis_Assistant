{{>layout/header}}
<div id="inputStock" class="container">
    <form>
        <table class="table table-hover table-dark">
            <thead>
            <tr>
                <th scope="col">발주처</th>
                <th scope="col" width="400">상품명</th>
                <th scope="col">색상</th>
                <th scope="col">사이즈</th>
                <th scope="col">수량</th>
            </tr>
            </thead>
            <tbody id="inputForm">
            <tr>
                <td class="form-group">
                    <input type="text" id="client" class="form-control" placeholder="client">
                </td>
                <td class="form-group">
                    <input type="text" id="productName" class="form-control" placeholder="productName">
                </td>
                <td class="form-group">
                    <input type="text" id="color" class="form-control" placeholder="color">
                </td>
                <td class="form-group">
                    <input type="text" id="size" class="form-control" placeholder="size">
                </td>
                <td class="form-group">
                    <input type="text" id="amount" class="form-control" placeholder="amount">
                </td>
            </tr>
            </tbody>
        </table>
    </form>
    <div align="right">
        <button type="button" class="btn btn-primary" id="btn-addInput">추가</button>
        <button type="button" class="btn btn-primary" id="btn-removeInput">삭제</button>
        <button type="button" class="btn btn-primary" id="btn-stockSave">재고 저장</button>
    </div>
</div>
</br>


<div class="container">
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">발주처</th>
            <th scope="col" width="400">상품명</th>
            <th scope="col">색상</th>
            <th scope="col">사이즈</th>
            <th scope="col">수량</th>
            <th scope="col">추가</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {{#stocks}}
            <tr>
                <td>{{client}}</td>
                <td>{{productName}}</td>
                <td>{{color}}</td>
                <td>{{size}}</td>
                <td>{{amount}}</td>
                <form action="/api/v1/addAmount" method="post">
                    <td>
                        <div class="form-group">
                            <input type="text" name="inputAmount" class="form-control">
                            <input type="text" name="id" class="form-control" value="{{id}}" style="display:none">
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <button type="submit" class="btn btn-secondary">수량 추가</button>
                        </div>
                    </td>
                </form>
            </tr>
        {{/stocks}}
        </tbody>
    </table>
</div>
</br>
{{>layout/footer}}